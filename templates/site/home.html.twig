{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}

{% block body %}

    <section class="site-hero overlay" data-stellar-background-ratio="0.5"
             style="background-image: url(site/images/big_image_1.jpg);">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-8 text-center">


                    <div class="mb-5 element-animate">
                        <h1>Learn From Guessing</h1>
                        <p class="lead">Learn something new every day with our different questions.</p>
                        {% if not app.user %}
                            <p><a href="{{ path('join') }}" class="btn btn-primary">Sign up and start exploring</a></p>
                        {% else %}
                            <p><a href="" class="btn btn-primary">Start exploring</a></p>
                        {% endif %}
                    </div>

                </div>
            </div>
        </div>
    </section>




{% endblock %}