{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Account{% endblock %}

{% block body %}
    <section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5"
             style="background-image: url(site/images/big_image_1.jpg);">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-8 text-center">

                    <div class="mb-5 element-animate">
                        <h1>Something about you<!doctype html></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="site-section bg-light">

        <div class="container">
            <div class="row">
                <div class="col-sm-3 text-center"><h1>{{ app.user.username }}</h1></div>
            </div>
            <div class="row">
                <div class="col-sm-3"><!--left col-->


                    <div class="text-center">
                        <img src="{{ asset('site/images/user_logo.png') }}"
                             class="avatar img-circle img-thumbnail" alt="avatar">
                    </div>
                    <hr>


                    <ul class="list-group">
                        <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                        <li class="list-group-item text-right"><span
                                    class="pull-left"><strong>Quiz games completed:</strong></span> 1
                        </li>
                        <li class="list-group-item text-right"><span
                                    class="pull-left"><strong>Right answers:</strong></span> {{ app.user.score }}
                        </li>
                    </ul>

                </div><!--/col-3-->
                <div class="col-sm-9">

                    <div class="tab-content">
                        <div class="tab-pane active" id="home">

                            <div class="form-group">
                                <div class="col-xs-12">
                                    {% include 'flash_messages.html.twig' %}
                                    {{ form_start(form) }}
                                    {{ form_widget(form) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <br>
                                    <button class="btn btn-lg btn-success" type="submit"><i
                                                class="glyphicon glyphicon-ok-sign"></i> Save
                                    </button>
                                    <button class="btn btn-lg" type="reset" onclick="myFunction()"><i
                                                class="glyphicon glyphicon-repeat"></i> Reset
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <hr>

                        </div><!--/tab-pane-->

                    </div><!--/tab-pane-->
                </div><!--/tab-content-->

            </div><!--/col-9-->
        </div><!--/row-->
    </section>

    <script>
        function myFunction() {
            document.getElementById("myForm").reset();
        }
    </script>
{% endblock %}